{
  "title": "Book",
  "$id": "book",
  "description": "A global book configuration object",
  "type": "object",
  "required": [
    "bookTitle",
    "bookAuthor",
    "formats",
    "chapters",
    "manuscript"
  ],
  "properties": {
    "manuscript": {"type":"string"},
    "formats": {
      "type":"array",
      "items": {
        "type": "string"
      }
    },
    "bookTitle": {
      "description": "The title of the book",
      "type": "string"
    },
    "bookAuthor": {
      "description": "The author of the book",
      "type": "string"
    },
    "sections": {
      "description": "A list of sections that contain chapters",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "appearsBefore"
        ],
        "properties": {
          "title": {
            "type":"string"
          },
          "appearsBefore": {
            "type":"string"
          },
          "content": {
            "type":"string"
          }
        }
      }
    },
    "chapters": {
      "description": "A list of chapters",
      "type": "array",
      "items": {
        "$ref": "chapter#"
      }
    }
  }
}