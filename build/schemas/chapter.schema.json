{
    "$id": "chapter",
    "title": "Chapter",
    "description": "A chapter in a Book",
    "type": "object",
    "properties": {
        "title": {
            "description": "The title of the chapter",
            "type": "string"
        },
        "author": {
            "description": "The author of the chapter",
            "type": "string"
        },
        "sections": {
            "description": "A list of sections within a chapter",
            "type": "array",
            "items": {
                "$ref": "chapter-section"
            }
        },
        "contentPath": {
            "description": "The path to the markdown or html file that contains the content of the chapter. If added, chapterSections will be ignored.",
            "type": "string"
        }
    }
}
